<%= form_for @goal  do |f| %>
  <%= f.hidden_field :user_id %>
  Describe your goal: <%= f.text_field :description %><br />
  Start date: <%= f.date_field :start_date %><br />
  End date: <%= f.date_field :end_date %><br />
  Set interval: <%= f.select :interval, Goal.intervals.keys %><br />
  Set priority: <%= f.select :priority, Goal.priorities.keys %><br />
  <%= f.submit %>
<% end %>
