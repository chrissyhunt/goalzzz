<% if @result.errors.any? %>
  <div id="error_explanation">
    <h4>
      <%= pluralize(@result.errors.count, "error") %>
      prohibited this post from being saved:
    </h4>

    <ul>
    <% @result.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for [@goal, @result] do |f| %>
  Date: <%= f.date_field :date %><br />
  Result: <%= f.select :status, Result.statuses.keys %><br />
  <%= f.fields_for :reflections do |refl| %>
    Notes:<br />
    <% if @result.reflection %>
      <%= refl.text_area :content, cols: 40, rows: 10, value: "#{@result.reflection.content}" %><br>
    <% else %>
      <%= refl.text_area :content, cols: 40, rows: 10 %><br>
    <% end %>
  <% end %>
  <%= f.submit %>
<% end %>
